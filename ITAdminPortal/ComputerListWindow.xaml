<Window x:Class="ITAdminPortal.ComputerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Computer List Manager" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FF0A0A0A"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Computer List Manager" FontSize="20" FontWeight="Bold" 
                   Foreground="#FF00FF41" Margin="0,0,0,15" FontFamily="Consolas"/>
        
        <Border Grid.Row="1" Background="#FF1A1A2E" BorderBrush="#FF00FF41" 
                BorderThickness="2" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Computers:" FontSize="14" Foreground="#FF00FF41" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button x:Name="AddButton" Content="Add" Click="AddButton_Click" 
                            Margin="0,0,5,0" Width="80"/>
                    <Button x:Name="RemoveButton" Content="Remove" Click="RemoveButton_Click" 
                            Margin="0,0,5,0" Width="80"/>
                    <Button x:Name="ImportButton" Content="Import" Click="ImportButton_Click" 
                            Margin="0,0,5,0" Width="80"/>
                    <Button x:Name="ExportButton" Content="Export" Click="ExportButton_Click" 
                            Width="80"/>
                </StackPanel>
                
                <ListBox x:Name="ComputerListBox" Grid.Row="1" Margin="10"
                         Background="#FF0F0F23" Foreground="#FF00FF41" 
                         BorderThickness="0" FontFamily="Consolas" FontSize="12"/>
            </Grid>
        </Border>
        
        <Border Grid.Row="2" Background="#FF1A1A2E" BorderBrush="#FF00FF41" 
                BorderThickness="2" CornerRadius="5" Margin="0,15,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Add Computer:" FontSize="14" 
                           Foreground="#FF00FF41" Margin="0,0,0,10"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox x:Name="ComputerTextBox" Width="300" Margin="0,0,10,0"
                             Background="#FF0F0F23" Foreground="#FF00FF41" 
                             BorderBrush="#FF00FF41" BorderThickness="2" 
                             FontFamily="Consolas" FontSize="12" Padding="5"/>
                    <Button x:Name="AddSingleButton" Content="Add" Click="AddSingleButton_Click" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" 
                    Margin="0,0,10,0" Width="100"/>
            <Button Content="Close" Click="CloseButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

