<Window x:Class="ITAdminPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IT Admin Portal - Script Gallery" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF1A1A2E"/>
            <Setter Property="Foreground" Value="#FF00FF41"/>
            <Setter Property="BorderBrush" Value="#FF00FF41"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF16213E"/>
                                <Setter Property="BorderBrush" Value="#FF00D9FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0F3460"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0F0F23" BorderBrush="#FF00FF41" BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="IT ADMIN PORTAL" FontSize="28" FontWeight="Bold" 
                               Foreground="#FF00FF41" FontFamily="Consolas"/>
                    <TextBlock Text=" | " FontSize="28" Foreground="#FF00D9FF" Margin="10,0"/>
                    <TextBlock x:Name="TitleText" Text="Script Gallery" FontSize="24" 
                               Foreground="#FF00D9FF" FontFamily="Consolas"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,15">
                    <Button x:Name="LangButton" Content="עברית / English" 
                            Click="LangButton_Click" Margin="0,0,10,0" Width="150"/>
                    <Button x:Name="AboutButton" Content="About" Click="AboutButton_Click" Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Category List -->
            <Border Grid.Column="0" Background="#FF1A1A2E" BorderBrush="#FF00FF41" 
                    BorderThickness="2" CornerRadius="5" Margin="0,0,20,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Categories" FontSize="18" FontWeight="Bold" 
                                   Foreground="#FF00FF41" Margin="0,0,0,15" FontFamily="Consolas"/>
                        
                        <Button x:Name="AllScriptsBtn" Content="All Scripts" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="All"/>
                        <Button x:Name="MonitoringBtn" Content="Monitoring" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="Monitoring"/>
                        <Button x:Name="UserMgmtBtn" Content="User Management" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="UserMgmt"/>
                        <Button x:Name="ComputerMgmtBtn" Content="Computer Management" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="ComputerMgmt"/>
                        <Button x:Name="ADMgmtBtn" Content="Active Directory" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="ADMgmt"/>
                        <Button x:Name="SecurityBtn" Content="Security" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="Security"/>
                        <Button x:Name="NetworkBtn" Content="Network" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="Network"/>
                        <Button x:Name="InstallationBtn" Content="Installation" 
                                Click="CategoryButton_Click" Margin="0,0,0,10" Tag="Installation"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Script List -->
            <Border Grid.Column="1" Background="#FF1A1A2E" BorderBrush="#FF00FF41" 
                    BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox x:Name="SearchBox" Grid.Row="0" Margin="15,15,15,10" 
                             Background="#FF0F0F23" Foreground="#FF00FF41" 
                             BorderBrush="#FF00FF41" BorderThickness="2" 
                             FontSize="14" Padding="10,8"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ScriptsList" Margin="15,0,15,15">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF0F0F23" BorderBrush="#FF00FF41" 
                                            BorderThickness="2" CornerRadius="5" 
                                            Margin="0,0,15,15" Width="300" 
                                            MouseEnter="ScriptCard_MouseEnter"
                                            MouseLeave="ScriptCard_MouseLeave"
                                            MouseLeftButtonUp="ScriptCard_Click">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="{Binding Name}" FontSize="16" 
                                                       FontWeight="Bold" Foreground="#FF00FF41" 
                                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#FF00D9FF" TextWrapping="Wrap" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding Category}" FontSize="11" 
                                                       Foreground="#FF888888" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF0F0F23" BorderBrush="#FF00FF41" BorderThickness="2,0,0,0">
            <TextBlock Text="IT Admin Portal v1.0 | Cyber Style Interface" 
                       Foreground="#FF00FF41" FontSize="12" 
                       HorizontalAlignment="Center" Margin="20,10" FontFamily="Consolas"/>
        </Border>
    </Grid>
</Window>

