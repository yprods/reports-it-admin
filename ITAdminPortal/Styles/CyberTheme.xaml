<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Cyber Theme Colors -->
    <Color x:Key="CyberGreen">#00FF41</Color>
    <Color x:Key="CyberCyan">#00D9FF</Color>
    <Color x:Key="CyberDark">#0A0A0A</Color>
    <Color x:Key="CyberDarkBlue">#1A1A2E</Color>
    <Color x:Key="CyberDarkerBlue">#0F0F23</Color>
    
    <SolidColorBrush x:Key="CyberGreenBrush" Color="{StaticResource CyberGreen}"/>
    <SolidColorBrush x:Key="CyberCyanBrush" Color="{StaticResource CyberCyan}"/>
    <SolidColorBrush x:Key="CyberDarkBrush" Color="{StaticResource CyberDark}"/>
    <SolidColorBrush x:Key="CyberDarkBlueBrush" Color="{StaticResource CyberDarkBlue}"/>
    <SolidColorBrush x:Key="CyberDarkerBlueBrush" Color="{StaticResource CyberDarkerBlue}"/>
    
</ResourceDictionary>

