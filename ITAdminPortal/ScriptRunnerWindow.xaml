<Window x:Class="ITAdminPortal.ScriptRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Runner" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FF0A0A0A"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="ScriptTitle" Grid.Row="0" FontSize="20" FontWeight="Bold" 
                   Foreground="#FF00FF41" Margin="0,0,0,15" FontFamily="Consolas"/>
        
        <Border Grid.Row="1" Background="#FF1A1A2E" BorderBrush="#FF00FF41" 
                BorderThickness="2" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="OutputBox" IsReadOnly="True" Background="#FF0F0F23" 
                         Foreground="#FF00FF41" BorderThickness="0" 
                         FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="RunButton" Content="Run Script" Click="RunButton_Click" 
                    Margin="0,0,10,0" Width="120"/>
            <Button Content="Close" Click="CloseButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

